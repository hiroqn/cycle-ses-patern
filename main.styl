size(w, h)
  width w
  height h

html, body
  size(100%, 100%)

#app
  size(100%, 100%)

.application
  size(100%, 100%)
  display flex
  flex-flow column nowrap

.nav
  flex 0 0 50px
  width 100%

.frame
  flex 1 0 auto
  width 100%
  box-sizing border-box
  border 3px solid #3b7fa3
  display flex
  flex-flow column nowrap

.pane
  flex 1 0 auto
  position relative

.circle
  size(30px, 30px)
  border-radius 50%
